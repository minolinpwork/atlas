#!/usr/bin/env bash
set -e
if [[ ! -d "/home/mpatchdev/cardano-src/atlas/atlas" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/mpatchdev/cardano-src/atlas/atlas")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/mpatchdev/cardano-src/atlas/atlas" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/mpatchdev/cardano-src/atlas/atlas/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/mpatchdev/cardano-src/atlas/atlas/.envrc" "/home/mpatchdev/cardano-src/atlas/atlas/.direnv"/*.rc
